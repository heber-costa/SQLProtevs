[Descrição Genérica do Produto]:
SELECT
B1_COD AS Codigo,
B1_DESC AS Descricao,
B1_TIPO AS Tipo,
B1_UM AS UM
FROM SB1020 WITH (NOLOCK)
WHERE D_E_L_E_T_ = '' AND B1_MSBLQL = '2';

[Itens das NF de Entrada]:
SELECT
D1_COD AS Codigo,
SUM(D1_QUANT) AS Entradas,
(SUM(D1_QUANT))/12 AS Media
FROM SD1020 D1 WITH (NOLOCK)
LEFT JOIN SB1020 B1 ON B1.D_E_L_E_T_ = '' AND B1_COD = D1_COD
WHERE D1.D_E_L_E_T_ = '' AND D1_QUANT > 0 AND D1_DTDIGIT BETWEEN DATEADD(MONTH,-12, DATEADD(m, DATEDIFF(m, 0, GETDATE()), 0)) AND DATEADD(m, DATEDIFF(m, 0, GETDATE()), -1) AND B1_MSBLQL = '2' 
GROUP BY D1_COD;

[Saldos Fisico e Financeiro]:
SELECT
B2_COD AS Codigo,
SUM(B2_QATU) AS Saldo
FROM SB2020 B2 WITH (NOLOCK)
LEFT JOIN SB1020 B1 ON B1.D_E_L_E_T_ = '' AND B1_COD = B2_COD
WHERE B2.D_E_L_E_T_ = '' AND B2_QATU > 0 AND B2_FILIAL IN ('03','05') AND B1_MSBLQL = '2'
GROUP BY B2_COD;

[Ped.Compra / Aut.Entrega]:
SELECT
C7_PRODUTO AS Codigo,
(SUM(C7_QUANT) - SUM(C7_QUJE)) AS Pedidos
FROM SC7020 C7 WITH (NOLOCK)
LEFT JOIN SB1020 B1 ON B1.D_E_L_E_T_ = '' AND B1_COD = C7_PRODUTO
WHERE C7.D_E_L_E_T_  = '' AND C7_FILIAL IN ('03','05') AND B1_MSBLQL = '2'
GROUP BY C7_PRODUTO;
